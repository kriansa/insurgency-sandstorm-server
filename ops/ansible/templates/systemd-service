[Unit]
Description=Insurgency Sandstorm Server
After=network.target

[Service]
Type=simple
WorkingDirectory=/srv/sandstorm
Restart=on-failure
RestartSec=10
User=steam
ExecStartPre=-/usr/local/bin/update-server
ExecStart=/srv/sandstorm/Insurgency/Binaries/Linux/InsurgencyServer-Linux-Shipping \
  {{ initial_map }}?MaxPlayers=8?Port=27102?QueryPort=27131 \
  -MapCycle={{ mapcycle }} \
  -GameStats -GSLTToken="{{ gslt_token }}" \
  -hostname="{{ server_name }}"

[Install]
WantedBy=multi-user.target
